<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:background="?attr/selectableItemBackground"
android:clickable="true"
android:paddingBottom="@dimen/row_padding"
android:paddingLeft="@dimen/activity_margin"
android:paddingRight="@dimen/activity_margin"
android:paddingTop="@dimen/row_padding">

<ImageView
    android:id="@+id/country_flag_imageview"
    android:layout_width="@dimen/thumbnail"
    android:layout_height="@dimen/thumbnail"
    android:layout_centerVertical="true"
    android:layout_marginRight="@dimen/row_padding" />

<TextView
    android:id="@+id/country_capital_textview"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_toRightOf="@id/country_flag_imageview"
    android:fontFamily="sans-serif-medium"
    android:textColor="@android:color/white"
    android:textSize="@dimen/contact_name" />

<TextView
    android:id="@+id/country_name_textview"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@id/country_capital_textview"
    android:layout_toRightOf="@id/country_flag_imageview"
    android:textColor="@android:color/white"
    android:textSize="@dimen/contact_number" />

</RelativeLayout>